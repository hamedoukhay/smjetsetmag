{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cinema list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Adresse</th>
                <th>Emplacement</th>
                <th>Nomsalle</th>
                <th>Coordx</th>
                <th>Coordy</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cinema_show', { 'id': entity.id }) }}">{{ entity.adresse }}</a></td>
                <td>{{ entity.emplacement }}</td>
                <td>{{ entity.nomSalle }}</td>
                <td>{{ entity.coordx }}</td>
                <td>{{ entity.coordy }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cinema_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cinema_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cinema_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
