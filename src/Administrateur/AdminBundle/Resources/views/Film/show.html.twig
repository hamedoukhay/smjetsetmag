{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Film</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Datesortie</th>
                <td>{{ entity.dateSortie }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ entity.synopsis }}</td>
            </tr>
            <tr>
                <th>Dateajout</th>
                <td>{{ entity.dateAjout|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Nomfilm</th>
                <td>{{ entity.nomFilm }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ entity.duree }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('film') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('film_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
